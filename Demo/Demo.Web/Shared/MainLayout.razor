@namespace Demo.Web
@inherits LayoutComponentBase
@using Caspian.Engine.Shared
<MainLayoutComponent PageTypeName="@pageTypeName">
    @Body
</MainLayoutComponent>
@code 
{
    string pageTypeName;
    protected override void OnParametersSet()
    {
        pageTypeName = (Body.Target as RouteView)?.RouteData.PageType.FullName;
        base.OnParametersSet();
    }
}