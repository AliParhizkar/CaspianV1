                        </div>
                    </div>
                    <div class="col-md-3">
                        <ColorpickerTextbox @bind-Color="inputColorPicker" BindingType="bindingType" AutoClose="autoClose" />
                    </div>
                </div>
            </div>
        </TabPanelItem>
    </Tabs>
</TabPanel>
<div style="height:350px">

</div>
@code 
{
    bool autoClose;
    string colorPickerColor = "#00FFFF";
    string inputColorPicker = "#FF00FF";
