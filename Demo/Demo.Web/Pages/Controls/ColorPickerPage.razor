                        <div class="row c-controls">
                            <div class="col-md-5">
                                <label>Binding type</label>
                            </div>
                            <div class="col-md-7">
                                <DropdownList @bind-Value="bindingType" />
                            </div>
                            <div class="col-md-5">
                                <label>Auto Close</label>
                            </div>
                            <div class="col-md-7">
                                <CheckBox @bind-Value="autoClose" />
                            </div>
                            <div class="col-md-5">
                                <label>Color</label>
                            </div>
                            <div class="col-md-7">
                                <span class="d-demo-color">
                                    <span style="background-color:@(inputColorPicker)"></span>
                                </span>
                            </div>
                            <div class="col-md-5">
