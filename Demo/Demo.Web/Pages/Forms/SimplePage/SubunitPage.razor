@page "/Demo/Subunit/{MainUnitId:int}"
@namespace Demo.Web.Pages
@inherits SimplePage<Subunit>
@{
    base.BuildRenderTree(__builder);
}
<div style="width:90%;margin:5px auto">
    <table style="width:100%">
        <tr>
            <td>
                <label>عنوان</label>
            </td>
            <td>
                <StringTextBox @bind-Value="SearchData.Title" />
            </td>
        </tr>
    </table>
    <DataGrid @ref="CrudGrid" TEntity="Subunit" Search="SearchData" ConditionExpr="t => t.MainUnitId == MainUnitId" TableHeight="350">
        <Columns>
            <GridColumn TEntity="Subunit" Field="t => t.Title" />
            <GridColumn TEntity="Subunit" Field="t => t.Factor.Seprate3Digit()" />
            <GridColumn TEntity="Subunit" Field="t => t.ActiveType.FaText()" />
            <GridCommandColumns TEntity="Subunit" />
        </Columns>
    </DataGrid>
    <Window @ref="UpsertWindow" Title="واحد فرعی" Style="width:450px"
            OnOpen="() =>
                    {
                        if (UpsertData.Id == 0)
                            UpsertData.ActiveType = ActiveType.Enable;
                        UpsertData.MainUnitId = MainUnitId;
                    }">
        <Content>
            <CaspianForm @ref="UpsertForm" Model="UpsertData">
                <CaspianValidationValidator ValidatorType="typeof(SubunitService)" />
                <table style="width:90%;margin:0 auto">
                    <tr>
                        <td>
                            <label>عنوان</label>
                        </td>
                        <td>
                            <StringTextBox @bind-Value="UpsertData.Title" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>ضریب</label>
                        </td>
                        <td>
                            <NumericTextBox @bind-Value="UpsertData.Factor" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>وضعیت</label>
                        </td>
                        <td>
                            <DropdownList @bind-Value="UpsertData.ActiveType" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <FormCommandButton />
                        </td>
                    </tr>
                </table>
            </CaspianForm>
        </Content>
    </Window>
</div>

@code
{
    [Parameter]
    public int MainUnitId { get; set; }
}
