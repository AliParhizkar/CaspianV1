@page "/Demo/CustomerGroup"
@namespace Demo.Web.Pages
@using Caspian.Common.RowNumber
@inherits SimplePage<CustomerGroup>
@{
    base.BuildRenderTree(__builder);
}
<div style="width:90%;margin:5px auto">
    <table style="width:100%">
        <tr>
            <td>
                <label>عنوان</label>
            </td>
            <td>
                <StringTextBox @bind-Value="SearchData.Title" />
            </td>
        </tr>
    </table>
    <DataGrid @ref="CrudGrid" TEntity="CustomerGroup" Search="SearchData" TableHeight="400">
        <Columns>
            <GridColumn TEntity="CustomerGroup" Field="t => t.Title" />
            <GridColumn TEntity="CustomerGroup" Field="t => t.ActiveType.FaText()" />
            <GridColumn TEntity="CustomerGroup" Title="مشتریان" style="width:80px;">
                <Template>
                    <IconButton Href='@($"/Demo/CustomerGroupAccessPage/{context.Data.Id}")' IconType="IconType.Wpforms" />
                </Template>
            </GridColumn>
            <GridCommandColumns TEntity="CustomerGroup" />
        </Columns>
    </DataGrid>
    <Window @ref="UpsertWindow" Title="گروه مشتری" Style="width:400px">
        <Content>
            <CaspianForm @ref="UpsertForm" Model="UpsertData">
                <CaspianValidationValidator ValidatorType="typeof(CustomerGroupService)" />
                <table style="width:90%;margin:0 auto">
                    <tr>
                        <td>
                            <label>عنوان</label>
                        </td>
                        <td>
                            <StringTextBox @bind-Value="UpsertData.Title" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>وضعیت</label>
                        </td>
                        <td>
                            <DropdownList @bind-Value="UpsertData.ActiveType" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <FormCommandButton />
                        </td>
                    </tr>
                </table>
            </CaspianForm>
        </Content>
    </Window>
</div>
