@page "/Demo/Courier"
@inject SimpleService<Courier> Service
@inherits BasePage
@{
    base.BuildRenderTree(__builder);
}
<div style="background-color:white" class="row ps-5 pe-5 pt-4 pb-4 ms-4 me-4">
    <div class="row c-controls">
        <div class="col-md-4 ps-4">
            <label>Last name</label>
        </div>
        <div class="col-md-8 pe-4">
            <StringTextBox @bind-Value="Service.Search.LName" Search />
        </div>
    </div>
    <DataGrid TEntity="Courier" Service="Service" ContentHeight="300">
        <Columns>
            <GridColumn Field="t => t.FName" />
            <GridColumn Field="t => t.LName" />
            <GridColumn Field="t => t.Code" />
            <GridCommandColumns />
        </Columns>
    </DataGrid>
    <Window Service="Service" Title="Courier" Style="width:450px">
        <CaspianForm Service="Service">
            <div class="row c-controls ps-3 pe-3">
                <div class="col-md-3">
                    <label>First name</label>
                </div>
                <div class="col-md-9">
                    <StringTextBox @bind-Value="Service.UpsertData.FName" />
                </div>
                <div class="col-md-3">
                    <label>Last Name</label>
                </div>
                <div class="col-md-9">
                    <StringTextBox @bind-Value="Service.UpsertData.LName" />
                </div>
                <div class="col-md-3">
                    <label>Personel Code</label>
                </div>
                <div class="col-md-9">
                    <StringTextBox @bind-Value="Service.UpsertData.Code" />
                </div>
                <div class="col-md-3"></div>
                <div class="col-md-9 text-center">
                    <WindowCommandButtons />
                </div>
            </div>
        </CaspianForm>
    </Window>
 </div>
