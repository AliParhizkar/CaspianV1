@namespace Caspian.UI
@switch (ViewType)
{
    case ViewType.Month:
        <MonthComponent PersianCalendar="PersianCalendar" Date="Date" />
        break;
    case ViewType.Year:
        <YearComponent PersianCalendar="PersianCalendar" Date="Date" />
        break;
    case ViewType.Decade:
        <DecadeComponent PersianCalendar="PersianCalendar" Date="Date" />
        break;
    case ViewType.Century:
        <CentuaryComponent PersianCalendar="PersianCalendar" Date="Date" />
        break;
}

@code 
{
    [Parameter]
    public DateTime Date { get; set; }

    [Parameter]
    public ViewType ViewType { get; set; }

    [Parameter]
    public bool PersianCalendar { get; set; }
}
