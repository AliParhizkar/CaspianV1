@namespace Caspian.UI
@inject NavigationManager NavigationManager
@{
    
    var className = "fa fa-" + IconType.ToString().SplitPascalCase().Replace(' ', '-').ToLower();
}
@if (Href.HasValue())
{
<a href="@(Href)" class="c-icon-button">
    <i class="@className"></i>
</a>
}
else
{
<button @attributes="Attributes" class="c-icon-button @(Title.HasValue() ? "c-title" : "c-simple")">
    <i class="@className"></i>
    @Title 
</button>
}


@code
{
    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object> Attributes { get; set; }

    [Parameter]
    public IconType IconType { get; set; }

    [Parameter]
    public string Href { get; set; }

    [Parameter]
    public string Title { get; set; }
}
