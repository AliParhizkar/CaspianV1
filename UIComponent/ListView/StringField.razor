@namespace Caspian.UI
@typeparam TEntity
@{
    if (RowData == null)
        ListView.AddDataField(Field.Body);
}
@if (RowData != null)
{
    if (RowData.UpsertMode.HasValue)
    {
        @EditTemplate
    }
    else
    {
        if (Template == null)
        {
            <span @attributes="Attributs">@Field.Compile().Invoke(RowData.Data)</span>
        }
        else
        {
            @Template
        }
    }
}
