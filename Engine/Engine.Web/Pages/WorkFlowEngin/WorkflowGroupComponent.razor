@namespace Caspian.Engine.WorkFlow
@inherits SimplePage<WorkflowGroup>
@{
    base.BuildRenderTree(__builder);
}
<div class="p-4">
    <div class="row c-controls ps-4 pe-4">
        <div class="col-md-4">
            <label>عنوان</label>
        </div>
        <div class="col-md-8">
            <StringTextBox @bind-Value="SearchData.Title" />
        </div>
    </div>

    <DataGrid @ref="CrudGrid" TEntity="WorkflowGroup" TableHeight="250" ConditionExpr="t => t.SubSystemKind == Subsystem">
        <Columns>
            <GridColumn Field="t => t.Title" />
            <GridColumn Title="مدل داده ای" style="width:80px">
                <Template>
                    <IconButton Href='@($"/{Subsystem.ToString()}/WorkflowEngine/DataModel/{context.Data.Id}")' IconType="IconType.Wpforms" />
                </Template>
            </GridColumn>
            <GridColumn Title="فرم" style="width:80px">
                <Template>
                    <IconButton Href='@($"/{Subsystem.ToString()}/WorkflowEngine/WorkflowForm/{context.Data.Id}")' IconType="IconType.Wpforms" />
                </Template>
            </GridColumn>
            <GridColumn Title="گردش کار" style="width:80px">
                <Template>
                    <IconButton Href='@($"/{Subsystem.ToString()}/WorkflowEngine/Workflow/{context.Data.Id}")' IconType="IconType.Wpforms" />
                </Template>
            </GridColumn>
            <GridColumn Title="نسخه چاپی" style="width:80px">
                <Template>
                    <a href="@($"/Engine/WorkflowReport/{context.Data.Id}")" target="_blank">...</a>
                </Template>
            </GridColumn>
            <GridCommandColumns />
        </Columns>
    </DataGrid>

</div>

<Window @ref="UpsertWindow" Title="گروه گردش کار" Style="width:500px" OnOpen="() => {UpsertData.SubSystemKind = Subsystem;}">
    <Content>
        <CaspianForm @ref="UpsertForm" Model="UpsertData">
            <div class="row c-controls ps-4 pe-4">
                <div class="col-md-4">
                    <label>عنوان</label>
                </div>
                <div class="col-md-8">
                    <StringTextBox @bind-Value="UpsertData.Title" />
                </div>
                <div class="col-md-4">
                    <label>شرح</label>
                </div>
                <div class="col-md-8">
                    <StringTextBox @bind-Value="UpsertData.Description" MultiLine Rows="3" />
                </div>
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <FormCommandButton />
                </div>
            </div>
        </CaspianForm>
    </Content>
</Window>

@code
{
    [Parameter]
    public SubSystemKind Subsystem { get; set; }
}

