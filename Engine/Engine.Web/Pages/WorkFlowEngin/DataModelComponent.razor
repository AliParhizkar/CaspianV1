@namespace Caspian.Engine.WorkFlow
@inherits SimplePage<DataModel>
@{
    base.BuildRenderTree(__builder);
}
<div class="p-4">
    <div class="row c-controls ps-4 pe-4">
        <div class="col-md-2">
            <label>عنوان</label>
        </div>
        <div class="col-md-4 ps-3">
            <StringTextBox @bind-Value="SearchData.Title" />
        </div>
        <div class="col-md-2 pe-3">
            <label>نام</label>
        </div>
        <div class="col-md-4">
            <StringTextBox @bind-Value="SearchData.Name" />
        </div>
    </div>
    <DataGrid @ref="CrudGrid" TEntity="DataModel" TableHeight="300" ConditionExpr="t => t.WorkflowGroupId == GroupId">
        <Columns>
            <GridColumn Field="t => t.Title" />
            <GridColumn Field="t => t.Name" />
            <GridColumn Title="نسخه چاپی" style="width:80px">
                <Template>
                    <a target="_blank" href="/WorkflowEngine/PrintVerson/@(context.Data.Id)">
                        ...
                    </a>
                </Template>
            </GridColumn>
            <GridColumn Title="فیلدها" style="width:80px">
                <Template>
                    <IconButton Href='@($"/{SubSystem.ToString()}/WorkflowEngine/DataModelField/{context.Data.Id}")' IconType="IconType.Wpforms" />
                </Template>
            </GridColumn>
            <GridCommandColumns />
        </Columns>
    </DataGrid>
</div>

<Window @ref="UpsertWindow" Title="مدل داده ای" Style="width:500px" OnOpen="() => {UpsertData.WorkflowGroupId = GroupId;}">
    <Content>
        <CaspianForm @ref="UpsertForm" Model="UpsertData">
            <div class="ps-4 pe-4 row c-controls">
                <div class="col-md-4">
                    <label>نام</label>
                </div>
                <div class="col-md-8">
                    <StringTextBox @bind-Value="UpsertData.Name" Style="direction:ltr" />
                </div>
                <div class="col-md-4">
                    <label>عنوان</label>
                </div>
                <div class="col-md-8">
                    <StringTextBox @bind-Value="UpsertData.Title" />
                </div>
                <div class="col-md-4">
                    <label>شرح</label>
                </div>
                <div class="col-md-8">
                    <StringTextBox @bind-Value="UpsertData.Description" MultiLine Rows="3" />
                </div>
                <div class="col-md-4">
                </div>
                <div class="col-md-8">
                    <FormCommandButton />
                </div>
            </div>
        </CaspianForm>
    </Content>
</Window>


@code
{
    [Parameter]
    public int GroupId { get; set; }

    [Parameter]
    public SubSystemKind SubSystem { get; set; }
}

