@page "/counter"
@using Caspian.UI


<ColorPicker Color="#FF0000" Left="100" Top="100"  />


@code 
{
    bool flag = true;
    string selectedAction;
    Person person = new Person();
    public class Person
    {
        public string Name { get; set; }

        public int Age { get; set; }
    }

    bool cancelSubmit;
    EditContext context;

    void SelectItem(string str)
    {
        selectedAction = str;
    }

    void keyhandler(KeyboardEventArgs args)
    {
        if (args.Key == "Enter")
        {
            return;
        }


    }

    void KeyPress(KeyboardEventArgs e)
    {
        cancelSubmit = true;
    }
}
